@inject FilterData FilterData

<div id="filterChecks">
    <label><u>Time</u></label>
    <div>
        @foreach (var time in FilterData.Times.TotalOptions()) {
            <li class="mx-1" style="display:inline"><input type="checkbox"> &lt; @time</li>
        }
    </div>

    <label><u>Difficulty</u></label>
     <div> @* style="padding-left:0px" *@
        @foreach (var difficulty in FilterData.Difficulties.TotalOptions()) {
            <li class="mx-1" style="display:inline"><input type="checkbox"> @difficulty</li>
        }
    </div>

    <label><u>Types</u></label>
    <div>
        @foreach(var restriction in FilterData.Restrictions.TotalOptions()) {
            <li class="mx-1" style="display:inline"><input type="checkbox"> @restriction</li>
        }
    </div>
</div>