<div id="filterChecks">
    <label><u>Time:</u></label>
    <ul style="padding-left:0px">
        <li class="mx-1" style="display:inline"><input type="checkbox"> &lt; 10min</li>
        <li class="mx-1" style="display:inline"><input type="checkbox"> &lt; 20min </li>
        <li class="mx-1" style="display:inline"><input type="checkbox"> &lt; 30min </li>
        <li class="mx-1" style="display:inline"><input type="checkbox"> &gt; 30min </li>
    </ul>

    <label><u>Difficulty:</u></label>
    <ul style="padding-left:0px">
        @foreach (var difficulty in DifficultyOptions) {
            <li class="mx-1" style="display:inline"><input type="checkbox"> @difficulty</li>
        }
    </ul>

    <label><u>Types:</u></label>
    <ul style="padding-left:0px">
        <li class="mx-2" style="display:inline"><input type="checkbox">Vegan </li>
        <li class="mx-2" style="display:inline"><input type="checkbox">Vegetarian </li>
        <li class="mx-2" style="display:inline"><input type="checkbox">GF </li>
    </ul>
</div>

@code {
    public List<String> DifficultyOptions = new List<String> { "Easy", "Medium", "Hard" };
    public List<String> ChosenDifficultyOptions = new List<String> {};
}