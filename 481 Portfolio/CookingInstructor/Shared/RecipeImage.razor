<a href = "https://www.youtube.com" class = "recipeLink" id ='show_bg_2'>
    <div class = "Recipe">
        <img class = "recipeImage" src = "@Image">
        <div class = "spicyLevel">
            @if (true)
            {   
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-fire" viewBox="0 0 16 16">
                <path d="M8 16c3.314 0 6-2 6-5.5 0-1.5-.5-4-2.5-6 .25 1.5-1.25 2-1.25 2C11 4 9 .5 6 0c.357 2 .5 4-2 6-1.25 1-2 2.729-2 4.5C2 14 4.686 16 8 16Zm0-1c-1.657 0-3-1-3-2.75 0-.75.25-2 1.25-3C6.125 10 7 10.5 7 10.5c-.375-1.25.5-3.25 2-3.5-.179 1-.25 2 1 3 .625.5 1 1.364 1 2.25C11 14 9.657 15 8 15Z"/>
                </svg>
            }
        </div>

        <div class = "difficultyLevel">
            @for(var i = 0; i < @Difficulty; i++){
                <iconify-icon icon="mdi:chef-hat"></iconify-icon>
            }
        </div>

        <div class = "recipeTime">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-alarm" viewBox="0 0 16 16" float="left">
            <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z"/>
            <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z"/>
            </svg>
            <text>@Time mins</text>
        </div>
    </div>
    <h1>@Name</h1>
    <i class="fa-thin fa-hat-chef" style="color:red;"></i>
</a>

@code {
    [Parameter]
    public string? Image { get; set; }

    [Parameter]
    public int? Difficulty { get; set; } 

    [Parameter]
    public bool? SpicyLevel { get; set; }

    [Parameter]
    public string? Name { get; set; }

    [Parameter]
    public int? Time { get; set; }

}