    bool[] importants = { true, true, true, true, true, true, true, true };
    string[] image = {"", "/BeefStew/bef.JPG", "", "", "", "", "", ""};

    int incheck_num;
    bool[] ingMember;
    public SplitScroll()
    {
        ingMember = new bool[sample_ingredients.Length];
        incheck_num = 0;
    }


    private void ing()
    {
        show = 0;
        ingColor = color1;
        stepColor = color2;

    }

    void ingChange(ChangeEventArgs evt)
    {
        @* if (ings.Checked)
        {
            incheck_num++;
        }
        if (ings.Checked == false && incheck_num != 0)
        {
            incheck_num--;
        } *@

        incheck_num++;
    }

    private void step()
    {
        show = 1;
        ingColor = color2;
        stepColor = color1;
    }
}
