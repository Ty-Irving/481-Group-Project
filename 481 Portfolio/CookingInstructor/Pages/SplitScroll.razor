<div class ="buttons">
    <button class="ingListBut" style="@ingColor" @onclick="ing">Ingredients (@incheck_num/@sample_ingredients.Length)</button>
    <button class="stepListBut" style="@stepColor" @onclick="step">Directions</button>
</div>


@if (show == 0)
{
    <div class="ingList">
        @for (int i = 1; i < sample_ingredients.Length + 1; i++)
        {

            <input type="checkbox" id = "ings" name = "ings" @onchange="ingChange" /><!---id="Ingridient1" name="Ingridient1" value="XXXX">-->
            <label>@sample_ingredients[i - 1]  </label>
            <br/>
        }

    </div>
}

@if (show == 1)
{
    <div class="stepList " >

        @for (int i = 0; i < instruction_lists.Length; i++)
        {
             <!---id="Instruction" name="Instruction" value="XXXX"-->
            <Teststar Value=@instruction_lists[i] important=@importants[i] image=@image[i]></Teststar>

        }

    </div>
}


@code {
    <!---[Parameter]
    public string[] ingredient_lists { get; set; }-->

    //CookingInstructor.RecipeNS.Recipe res = //passed value
    private int show = 0;
    private string ingColor = "background-color:blue; color: white;";
    private string stepColor = "background-color: #e7e7e7; color: black;";
    private string color1 = "background-color:blue; color: white;";
    private string color2 = "background-color: #e7e7e7; color: black;";
    public 


    @* for (int i = 0; i < 3; i++)
    {
        //combine each Ingredient class data into 1 string and append to list.
    } *@

    string[] sample_ingredients = {"2 lbs Beef cut into 2-inch chunks","1 Tsp Kosher Salt","½ Tsp Black Pepper","2 Tbsp Flour","2 Tbsp Olive Oil",
                                   "½ Yellow Onion","4 Garlic Cloves","1 Large (or 2 medium) Carrot","2 Potato", "2 cups Beef Broth",
                                   "quarter cup Tomato Paste","1 tsp Worcestershire Sauce","1 Bay Leaves"," 2 TspThyme Leaves"};


    string[] instruction_lists = {
    "1. Preheat oven to 325F.",
    "2. Season the beef chunks on all sides with salt and pepper. Sprinkle the flour over and toss the seasoned beef to coat it on all sides.",
    "3. Heat the olive oil in a large Dutch oven over medium heat. Brown the beef in batches, on all sides, for 3-4 minutes per batch. ",
    "4. Don't worry about cooking the beef all the way through at this stage. Transfer the browned beef to a plate and set aside.",
    "5. Add the onions, garlic, and carrots to the Dutch oven, and cook, stirring occasionally, for 2-3 minutes, or until slightly browned.",
    "6. Add the potatoes, beef broth, tomato paste, bay leaf, thyme, and Worcestershire sauce, and use a wooden spoon to scrape the browned bits from the bottom of the pot.",
