@page "/favourites"
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager NavManager

<PageTitle>Favourites</PageTitle>

<SearchbarForResults />
<div class = "recipeContainer" style="margin-bottom: 100px;">
        @for(var i = 0; i < list.Length; i++){
            if(list[i].isFavorite == true){
                display = true;
                <RecipeImageHorizontal
                    Image = "@list[i].imagePath"
                    Difficulty = "@list[i].Difficulty"
                    SpicyLevel = "@list[i].Spicy"
                    Calories = "@list[i].CaloriesPerServing"
                    Name = "@list[i].Name"
                    Time = "@list[i].Time"
                    Index ="@i"
                />
            }
        }

        @if(display == false){
            <h1 style="margin-top: 10px;">No favourites found...</h1>
        }
        
</div>

@code{
    private CookingInstructor.RecipeNS.Recipe[]? list = Index.staticlist;

    private bool display = false;
    protected override void OnInitialized()
    {
        Data.Recipes myClass = new Data.Recipes();
    }
}